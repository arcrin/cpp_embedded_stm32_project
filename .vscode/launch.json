    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "executable": "./build/cpp_stm32_embedded.elf",
            "configFiles": [
                "interface/stlink-v2-1.cfg",
                "board/stm32f4discovery.cfg"
            ],
            "serverpath": "C:/Learning/embedded/xpack-openocd-0.12.0-1-win32-x64/xpack-openocd-0.12.0-1/bin/openocd.exe", // Specify the path to the OpenOCD executable
            "serverArgs": [
                "-s", "C:/Learning/embedded/xpack-openocd-0.12.0-1-win32-x64/xpack-openocd-0.12.0-1/openocd/scripts",
                "-c", "init; reset init"
            ],
            "gdbPath": "C:/Program Files (x86)/GNU Arm Embedded Toolchain/10 2021.10/bin/arm-none-eabi-gdb.exe",
            "svdFile": "${workspaceRoot}/stm32f407.svd",
            "preLaunchTask": "Build with CMake",
        },
        {
            "name":"GNU GCC Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/MyCppProject.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe"
        }
    ]
}